<PropertyList>

  <path>m803.ac</path>
  
    
 <animation>
    <type>material</type>
    <object-name>displays.on</object-name>
    <emission>
      <red>1</red>
      <green>0.5</green>
      <blue>0.4</blue>
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>
<animation>
<type>select</type>
   <object-name>displays.off</object-name>
<condition>
      <not><property>/controls/electric/battery-switch</property></not>
</condition>
</animation>
<!--Buttons-->
  <animation>
    <type>pick</type>
    <object-name>oatvolts</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-cycle</command>
        <property>/instrumentation/m803/mode</property>
	<value>0</value>
	<value>1</value>
	<value>2</value>
      </binding>
    </action>
  </animation>
<animation>
    <type>pick</type>
    <object-name>select</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-cycle</command>
        <property>/instrumentation/m803/clock-mode</property>
	<value>0</value>
	<value>1</value>
	<value>2</value>
	<value>3</value>
      </binding>
    </action>
  </animation>
