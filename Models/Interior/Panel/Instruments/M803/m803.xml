<!--FT part-->
<animation>
<type>select</type>
   <object-name>FTind</object-name>
<condition>
     <equals>
        <property>/instrumentation/m803/clock-mode</property>
<value>2</value>
</equals>
</condition>
</animation>
<!--ET part-->
<animation>
<type>select</type>
   <object-name>ETind</object-name>
<condition>
     <equals>
        <property>/instrumentation/m803/clock-mode</property>
