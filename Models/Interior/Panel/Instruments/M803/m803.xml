    <step>1</step>
    <factor>0.1</factor>
    <bias>0.0001</bias>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
 <animation>
    <type>textranslate</type>
   <object-name>UTtime.10m</object-name>
    <property>/sim/time/utc/minute</property>
    <step>10</step>
    <factor>0.01</factor>
    <bias>0.0001</bias>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
 <animation>
    <type>textranslate</type>
   <object-name>UTtime.1m</object-name>
    <property>/sim/time/utc/minute</property>
    <step>1</step>
    <factor>0.1</factor>
    <bias>0.0001</bias>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

<!--LT part-->
<animation>
<type>select</type>
   <object-name>LTind</object-name>
   <object-name>LTtime.10h</object-name>
   <object-name>LTtime.1h</object-name>
   <object-name>LTtime.10m</object-name>
